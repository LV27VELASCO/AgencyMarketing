<script>
      import emailjs from 'emailjs-com';

      window.addEventListener('DOMContentLoaded', () => {
        const form = document.getElementById('contact-form') as HTMLFormElement;
        const alert = document.getElementById('success-alert') as any;

        if (form) {
          form.addEventListener('submit', async (e) => {
            e.preventDefault();

            try {
              const result = await emailjs.sendForm('service_yezwe9gz','template_7rpmv8v',form,'BYPYNZiyXDLP7Tq28');

              form.reset();
              // Mostrar alerta
                alert.classList.remove('opacity-0', 'scale-95', 'pointer-events-none');
                alert.classList.add('opacity-100', 'scale-100');

                // Ocultarla despu√©s de 5 segundos
                setTimeout(() => {
                    alert.classList.remove('opacity-100', 'scale-100');
                    alert.classList.add('opacity-0', 'scale-95', 'pointer-events-none');
                }, 5000);
              
            } catch (error) {
              alert('Error al enviar correo');
              console.error(error);
            }
          });
        }
      });
</script>