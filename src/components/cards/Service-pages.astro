---
import Paragraph from '../shared/Paragraph.astro';

export interface Props{
    title:string,
    description:string
    icon: string,
    steps:string[]
}

const {title, description, icon, steps} = Astro.props
---
<div class="relative p-5 sm:p-6 lg:p-8 rounded-3xl border border-box-border bg-box-bg shadow-lg shadow-box-shadow overflow-hidden">
    
    <div class="rounded-xl bg-gray-300 dark:bg-gray-950 p-3 text-heading-1 w-max z-10">
            <slot set:html={icon} />
    </div>
    <div class="mt-6 space-y-4 relative">
        <h2 class="text-lg md:text-xl font-semibold text-heading-2">
            {title}
        </h2>
        <Paragraph>
            {description}
        </Paragraph>
        <ul class="list-disc text-heading-2 px-4">
            {steps.map((text:string)=>{
                return (
                <li>
                    <Paragraph className='!text-base'>{text}</Paragraph>
                </li>
                )
            })}
        </ul>
    </div>
    <span class="absolute w-32 aspect-square -bottom-16 -right-16 bg-primary/10 rounded-full"></span>
</div>